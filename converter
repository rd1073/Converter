 #include<stdio.h>
#include<math.h>
#include<string.h>

//converter program to convert various units

void Centimeters(float a){	
	printf("%0.3f meters\n", a/100);
	printf("%0.3f kilometers\n", a/100000);
	printf("%0.3f millimeters\n", a*10);
	printf("%0.3f micrometers\n", a*10000);
	printf("%0.3e nanometers\n",  a*1e+7);
	printf("%0.3f miles\n", a/160934);
	printf("%0.3f yard\n", a/91.44);
	printf("%0.3f feet\n", a/30.48);
	printf("%0.3f inches\n", a/2.54);
	printf("%0.6f nautical miles\n",  a/185200);
}

void Meters(float a){
	printf("%0.3f centimeters\n", a*100);
	printf("%0.3f kilometers\n", a/1000);
	printf("%0.3f millimeters\n", a*1000);
	printf("%0.3e micrometers\n", a*1e+6);
	printf("%0.3e nanometers\n", a*1e+9);
	printf("%0.3f miles\n",  a/1609); 
	printf("%0.3f yard\n", a*1.094);
	printf("%0.3f feet\n",a*3.281);
	printf("%0.3f inches\n", a*39.37);
	printf("%0.3f nautical miles\n", a/1852);} 

void Kilometers(float a){
	printf("%0.3f meters\n", a*1000);
	printf("%0.3f centimeters\n", a*100000);
	printf("%0.3e millimeters\n", a*1e+6);
	printf("%0.3e micrometers\n", a*1e+9);
	printf("%0.3e nanometers\n",  a*1e+12);
	printf("%0.3f miles\n", a/1.609);
	printf("%0.3f yard\n", a*1094);
	printf("%0.3f feet\n", a*3281);
	printf("%0.3f inches\n", a*39370);
	printf("%0.6f nautical miles\n",  a/1.852);}

void Millimeters(float a){
	printf("%0.3f meters\n", a/1000);
	printf("%0.3f centimeters\n", a/10);
	printf("%0.3e kilometers\n", a/1e+6);
	printf("%0.3f micrometers\n", a*1000);
	printf("%0.3e nanometers\n",  a*1e+6);
	printf("%0.3f miles\n", a/1.609e+6);
	printf("%0.3f yard\n", a/914);
	printf("%0.3f feet\n", a/305);
	printf("%0.3f inches\n", a/25.4);
	printf("%0.6e nautical miles\n",  a/1.852e+6);}

void Micrometers(float a){
	printf("%0.3e meters\n", a/1e+6);
	printf("%0.3f centimeters\n", a/10);
	printf("%0.3e kilometers\n", a/1e+9);
	printf("%0.3f millimeters\n", a/1000);
	printf("%0.3e nanometers\n",  a*1000);
	printf("%0.3e miles\n", a/1.609e+9);
	printf("%0.3f yard\n", a/914400);
	printf("%0.3f feet\n", a/304800);
	printf("%0.3f inches\n", a/25400);
	printf("%0.6e nautical miles\n",  a/1.852e+9);}	

void Nanometers(float a){
	printf("%0.3e meters\n", a/1e+9);
	printf("%0.3e centimeters\n", a/1e+7);
	printf("%0.3e kilometers\n", a/1e+12);
	printf("%0.3f micrometers\n", a/1000);
	printf("%0.3e millimeters\n", a/1e+6);
	printf("%0.3e miles\n", a/1.609e+12);
	printf("%0.3e yard\n", a/9.144e+8);
	printf("%0.3e feet\n", a/3048e+8);
	printf("%0.3e inches\n", a/25.4e+7);
	printf("%0.6e nautical miles\n",  a/1.852e+12);}

void Mile(float a){
	printf("%0.3f meters\n", a*1609);
	printf("%0.3f centimeters\n", a*160934);
	printf("%0.3f kilometers\n", a*1.609);
	printf("%0.3e micrometers\n", a*1.609e+9);
	printf("%0.3e millimeters\n", a*1609e+6);
	printf("%0.3e nanometers\n", a*1.609e+12);
	 
	printf("%0.3f yard\n", a*1760);
	printf("%0.3f feet\n", a*5280);
	printf("%0.3f inches\n", a*63360);
	printf("%0.6f nautical miles\n",  a/1.151);}


void Yard(float a){
	printf("%0.3f meters\n", a*100);
	printf("%0.3f centimeters\n", a*91.44);
	printf("%0.3f kilometers\n", a/1094);
	printf("%0.3f micrometers\n", a*914400);
	printf("%0.3f millimeters\n", a*914);
	printf("%0.3e nanometers\n", a*9.144e+8);
	printf("%0.3f mile\n", a/1760);
	printf("%0.3f feet\n", a*3);
	printf("%0.3f inches\n", a*36);
	printf("%0.6f nautical miles\n",  a/2025);}


void Foot(float a){
	printf("%0.3f meters\n", a/3.281);
	printf("%0.3f centimeters\n", a*30.48);
	printf("%0.3f kilometers\n", a/3281);
	printf("%0.3f micrometers\n", a*304800);
	printf("%0.3f millimeters\n", a*305);
	printf("%0.3e nanometers\n", a*3.048e+8);
	printf("%0.3f mile\n", a/5280);
	printf("%0.3f yard\n", a/3);
	printf("%0.3f inches\n", a*12);
	printf("%0.6f nautical miles\n",  a/6076);}


void Inch(float a){
	printf("%0.3f meters\n", a/39.37);
	printf("%0.3f centimeters\n", a*2.54);
	printf("%0.3f kilometers\n", a/39370);
	printf("%0.3f micrometers\n", a*25400);
	printf("%0.3f millimeters\n", a*25.4);
	printf("%0.3e nanometers\n", a*2.54e+7);
	printf("%0.3f mile\n", a*63360);
	printf("%0.3f yard\n", a/36);
	printf("%0.3f feet\n", a/12);
	 
	printf("%0.6f nautical miles\n",  a/72913);}
	
void NauticalMile(float a){
	printf("%0.3f meters\n", a*1852);
	printf("%0.3f centimeters\n", a*185200);
	printf("%0.3f kilometers\n", a*1.852);
	printf("%0.3f micrometers\n", a*1.852+9);
	printf("%0.3e millimeters\n", a*1.852e+6);
	printf("%0.3e nanometers\n", a*1.852e+12);
	printf("%0.3f mile\n", a*1.151);
	printf("%0.3f yard\n", a*2025);
	printf("%0.3f feet\n", a*6076);
	printf("%0.3f inches\n", a*72913);}

	
void Kilograms(float a){
	 
	 
	printf("%0.3f grams\n", a*1000);
	printf("%0.3e milligrams\n", a*1e+6);
	printf("%0.3e micrograms\n", a*1e+9);
	printf("%0.3f tonnes\n", a/1000);
	 
	printf("%0.3f pounds\n", a*2.205);}

void Grams(float a){
	printf("%0.3f kilograms\n", a*1000);
	 
	 
	printf("%0.3f milligrams\n", a*1000);
	printf("%0.3e micrograms\n", a*1e+6);
	printf("%0.3e tonnes\n", a/1e+6);
	 
	printf("%0.3f pounds\n", a/454);}

void Milligrams(float a){
	printf("%0.3e kilograms\n", a/1e+6);
	 
	printf("%0.3f grams\n", a/1000);
 
	printf("%0.3f micrograms\n", a*1000);
	printf("%0.3e tonnes\n", a/1e+9);
	 
	printf("%0.3f pounds\n", a/453592);}
	 
void Micrograms(float a){
	printf("%0.3e kilograms\n", a/1e+9);
	 
	printf("%0.3e grams\n", a*1e+6);
	printf("%0.3f milligrams\n", a*1000);
 
	printf("%0.3e tonnes\n", a/1e+12);
	 
	printf("%0.3e pounds\n", a/4.536e+8);}

void Ton(float a){
	printf("%0.3f kilograms\n", a*1000);
	 
	printf("%0.3e grams\n", a*1e+6);
	printf("%0.3e milligrams\n", a*1e+9);
	printf("%0.3e micrograms\n", a*1e+12);
	 
	 
	printf("%0.3f pounds\n", a*2205);}
 
void Pound(float a){
	printf("%0.3f kilograms\n", a/2.205);
	 
	printf("%0.3f grams\n", a*454);
	printf("%0.3f milligrams\n", a*453592);
	printf("%0.3e micrograms\n", a*4.536e+8);
	printf("%0.3f tonnes\n", a/2205);}
 
void Celsius(float a){
 
	 
	printf("%0.3f farenheit\n", (a*1.8)+32);
	printf("%0.3f kelvin\n", a+273.15);}

void Farenheit(float a){
	printf("%0.3f celsius\n", (a-32)*0.555-17.78);
	 
 
	printf("%0.3f kelvin\n", (a-32)*0.555+273.15);}

void Kelvin(float a){
	printf("%0.3f celsius\n", (a-273.15)*1.8+32);
	 
	printf("%0.3f farenheit\n", a-2);}
	

 

void Inr(float a){
	printf("%0.3f USD\n", a*0.013);
	printf("%0.3f EUR\n", a*0.012);
	printf("%0.3f AUD\n", a*0.018);
	printf("%0.3f GBP\n", a*0.010);
	 }

void Usd(float a){
	 
	printf("%0.3f INR\n", a*76.65);
	 
	printf("%0.3f EUR\n", a*0.93);
	printf("%0.3f AUD\n", a*1.39);
	printf("%0.3f GBP\n", a*0.78);
 }

void Eur(float a){
	printf("%0.3f USD\n", a*1.07);
	printf("%0.3f INR\n", a*82.30);
	 
	 
	printf("%0.3f AUD\n", a*1.49);
	printf("%0.3f GBP\n", a*0.84);
	 }

void Aud(float a){
	printf("%0.3f USD\n", a*0.72);
	printf("%0.3f INR\n", a*55.12);
	 
	printf("%0.3f EUR\n", a*0.67);
	 
	printf("%0.3f GBP\n", a*0.56);
 }
 
 void Gbp(float a){
	printf("%0.3f USD\n", a*1.27);
	printf("%0.3f INR\n", a*97.68);
	 
	printf("%0.3f EUR\n", a*1.19);
	 
	printf("%0.3f AUD\n", a*1.77);
 }
 
	

 
